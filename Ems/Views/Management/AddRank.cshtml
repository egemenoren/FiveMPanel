@model IEnumerable<Ems.Data.Model.Jobs>
@{
    ViewBag.Title = "AddRank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">



    <section class="content">
        <div class="container-fluid">
            <div class="d-flex justify-content-center">
                <div class="col-md-8">

                    <form action="/Management/AddRank" method="post" id="addRankForm">


                        <!-- SELECT2 EXAMPLE -->
                        <div class="card card-success mt-5">
                            <div class="card-header">
                                <h3 class="card-title">Rank Ekle</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Rank Adı</label>
                                    <input type="text" class="form-control" id="RankName" name="RankName" placeholder="Rank Adı Girin" required>
                                </div>
                                <div class="form-group">
                                    <label for="HierarchyNo">Hiyerarşi Numarası</label>
                                    <input type="text" class="form-control" id="HierarchyNo" name="HierarchyNo" placeholder="Hiyerarşi Numarası Girin En Düşük Rank 0 Olarak Girilecektir." required>
                                </div>
                                <div class="form-group">
                                    <label for="HourlySalary">Maaş</label>
                                    <input type="text" class="form-control" id="HourlySalary" name="HourlySalary" placeholder="Saatlik alacağı maaşı" required>
                                </div>
                                <div class="form-group">
                                    <label>Meslek</label>
                                    <select class="form-control select2" name="Job" width="100%">
                                        @foreach (var item in Model)
                                        {
                                            if (Model.First() == item)
                                            {
                                                <option selected>@item.JobName</option>
                                            }
                                            else
                                            {
                                                <option>@item.JobName</option>
                                            }


                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                        <input type="checkbox" value="true" class="custom-control-input" name="AccessJobPanel" id="AccessJobPanel">
                                        <label class="custom-control-label" for="AccessJobPanel">Meslek Yönetim Paneline Erişim</label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-info">
                                    <span id="spinner" hidden class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    Kaydet
                                </button>
                                <div class="btn btn-danger"><a href="/Home/Index" style="color:white">Vazgeç</a></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Content/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script>
    $("#addRankForm").submit(function (e) {
        $("#spinner").attr("hidden", false);
        $(".btn").attr("disabled", true);
    });
</script>


