@model Ems.ViewModels.AddUserViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content-wrapper">
    <div class="d-flex justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Kullanıcı Ekle</h3>
                </div>
                <div class="card-body">

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="Şifre">
                    </div>

                    <div class="input-group mb-3">
                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-check"></i></span>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Minimal</label>
                        <select id="jobSelect2" class="form-control select2" style="width: 100%;">
                            <option selected="selected">Lütfen Birini Seçiniz.</option>
                            @foreach (var item in Model.Jobs)
                            {
                                <option>@item.JobName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Minimal</label>
                        <select class="form-control select2" id="rankSelect2" style="width: 100%;">
                            <option selected="selected">Lütfen Önce Meslek Seçiniz!</option>

                        </select>
                    </div>

                    <!-- /input-group -->
                </div>
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>
<script src="~/Content/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script>


    $("#jobSelect2").on("change", function (e) {
        if ($("#jobSelect2").find(":selected2").val() != "Lütfen Birini Seçiniz.") {
            var jobName = $("#jobSelect2").find(':selected').val();
            $('#rankSelect2').select2({
                ajax: {
                    url: '/Management/GetRanks?Job=' + jobName,
                    processResults: function (data) {
                        console.log(data);
                        // Transforms the top-level key of the response object from 'items' to 'results'
                        return {
                            results: data.RankName
                        };
                    }
                }
            });
        }





</script>
