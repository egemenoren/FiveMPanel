@model Ems.ViewModels.RankManagementViewModel
@{
    ViewBag.Title = "AddRank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">



    <section class="content">
        <div class="container-fluid">
            <div class="d-flex justify-content-center">
                <div class="col-md-8">

                    <form action="/Management/EditRank" method="post">


                        <!-- SELECT2 EXAMPLE -->
                        <div class="card card-success mt-5">
                            <div class="card-header">
                                <h3 class="card-title">Rank Düzenle</h3>

                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Rank Adı</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="RankName" placeholder="Rank Adı Girin" value="@Model.RankName" required>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Hiyerarşi Numarası</label>
                                    <input type="text" class="form-control" id="exampleInputEmail1" name="HierarchyNo" value="@Model.HierarchyNo" placeholder="Hiyerarşi Numarası Girin En Düşük Rank 0 Olarak Girilecektir." required>
                                </div>
                                <input hidden name="RankId" value="@Model.Id" />
                                <div class="form-group">
                                    <label>Meslek</label>
                                    <select class="form-control select2" name="Job" id="Job">
                                        <option selected="selected">@Model.JobName</option>
                                        <option>Doktor</option>
                                        <option>Polis</option>
                                        <option>Sheriff</option>
                                        <option>State Polis</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                        <input type="checkbox" checked="@Model.AccessJobPanel" value="true" class="custom-control-input" name="AccessJobPanel" id="AccessJobPanel">
                                        <label class="custom-control-label" for="AccessJobPanel">Meslek Yönetim Paneline Erişim</label>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-right">
                                <button type="submit" class="btn btn-info">Kaydet</button>
                                <div class="btn btn-danger"><a href="/Home/Index" style="color:white">Vazgeç</a></div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="~/Content/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#Job").on('select2:opening', function () {
            $("option[selected='selected']").remove();
        })
    })
</script>


